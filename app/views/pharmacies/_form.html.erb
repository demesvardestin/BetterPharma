<%= form_for(@pharmacy, :html => { :id => "pharmacy-edit-form", :multipart => true }) do |f| %>
    <div class="field">
        <div class="row">
            <div class="col-lg-6">
                <label for="pharmacy_owner_first_name">First name</label>
                <%= f.text_field :pharmacy_owner_first_name, autofocus: true, autocomplete: "name",
                    class:"form-control", placeholder:"First name" %>
            </div>
            
            <div class="col-lg-6">
                <label for="pharmacy_owner_last_name">Last name</label>
                <%= f.text_field :pharmacy_owner_last_name, autofocus: true, autocomplete: "name",
                    class:"form-control", placeholder:"Last name" %>
            </div>
        </div>
    </div>
    
    <div class="field">
        <label for="pharmacy_name">Pharmacy name</label>
        <%= f.text_field :pharmacy_name, autofocus: true, autocomplete: "name",
            class:"form-control", placeholder:"Pharmacy name" %>
    </div>
    
    <div class="field">
        <label for="pharmacy_phone_number">Phone number</label>
        <%= f.text_field :pharmacy_phone_number, autofocus: true, autocomplete: "phone_number",
            class:"form-control", placeholder:"Phone number" %>
    </div>
  
    <div class="actions">
        <%= f.submit "Save changes", class:"btn btn-primary btn-block" %>
    </div>
<% end %>