<section id="status-requests">
    <div class="row">
        <div class="col-lg-4">
            <div class="card box-shadow request-number">
                <div class="card-body">
                    <h5>New Requests</h5>
                    <hr>
                    <span>
                        <%= @unresolved_requests.size %>
                    </span>
                </div>
            </div>
            
            <div class="card box-shadow request-number">
                <div class="card-body">
                    <h5>Resolved</h5>
                    <hr>
                    <span>
                        <%= @resolved_requests.size %>
                    </span>
                </div>
            </div>
        </div>
        <div class="col-lg-7 offset-lg-1">
            <% @unresolved_requests.each do |r| %>
                <div class="status-request-card diff card">
                    <div class="card-body">
                        <span>
                            rx #939292
                        </span>
                        <span>
                            <%= time_ago_in_words(r.created_at) + " ago" %>
                        </span>
                        <span>
                            <div class="btn-group">
                                <button type="button" class="btn btn-primary" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    update rx status <i class="fas fa-angle-down"></i>
                                </button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="#">Action</a>
                                    <a class="dropdown-item" href="#">Another action</a>
                                    <a class="dropdown-item" href="#">Something else here</a>
                                    <a class="dropdown-item" href="#">Separated link</a>
                                </div>
                            </div>
                        </span>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</section>